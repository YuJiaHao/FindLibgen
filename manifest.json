{
    "manifest_version": 2,
    "name": "Find Libgen",
    "version": "0.1",
    "description": "Find Libgen",
    "icons": {
        "128": "img/128.png"
    },
    "browser_action": {
        "default_icon": "img/128.png",
        "default_title": "find a book or something on Libgen"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "contextMenus",
        "storage"
    ]
}